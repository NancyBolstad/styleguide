.subscription-wrapper {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: left;
    padding: 0 0.5rem;

    @media all and (min-width: 25.3125em) {
        flex-wrap: wrap;
    }
}

.subscription {
    background-color: var(--white);
    cursor: pointer;
    display: inline-block;
    margin: 1%;
    position: relative;
    width: 48%;

    @media all and (min-width: 25.3125em) {
        flex-basis: auto;
        margin: 0.75rem;
        min-width: 168px;
        width: auto;
    }

    &--pink {
        border: 3px solid var(--pink);

        &.subscription--is-expanded {
            .subscription__teaser {
                border: 3px solid var(--pink);
            }
            .subscription__teaser-content {
                background-color: var(--pink);
            }
        }
        .subscription__speech-bubble {
            border: 3px dotted var(--pink);
        }
    }

    &--light-orange {
        border: 3px solid var(--light-orange);

        &.subscription--is-expanded {
            .subscription__teaser {
                border: 3px solid var(--light-orange);
            }
            .subscription__teaser-content {
                background-color: var(--light-orange);
            }
        }
        .subscription__speech-bubble {
            border: 3px dotted var(--light-orange);
        }
    }

    &--green {
        border: 3px solid var(--green);

        &.subscription--is-expanded {
            .subscription__teaser {
                border: 3px solid var(--green);
            }
            .subscription__teaser-content {
                background-color: var(--green);
            }
        }
        .subscription__speech-bubble {
            border: 3px dotted var(--green);
        }
    }

    &--teal {
        border: 3px solid var(--teal);

        &.subscription--is-expanded {
            .subscription__teaser {
                border: 3px solid var(--teal);
            }
            .subscription__teaser-content {
                background-color: var(--teal);
            }
        }
        .subscription__speech-bubble {
            border: 3px dotted var(--teal);
        }
    }

    &--blue {
        border: 3px solid var(--blue);

        &.subscription--is-expanded {
            .subscription__teaser {
                border: 3px solid var(--blue);
            }
            .subscription__teaser-content {
                background-color: var(--blue);
            }
        }
        .subscription__speech-bubble {
            border: 3px dotted var(--blue);
        }
    }

    /* Close button */
    &__close-expanded-info {
        background: none;
        border: none;
        display: none;
        padding: 10% 2%;
        width: 55px;

        @media all and (min-width: 21em) {
            padding: 1rem;
            width: 135px;
        }
    }

    &__close-text {
        vertical-align: super;

        @media all and (min-width: 21em) {
            padding: 1rem;
        }
    }

    &__close-image {
        width: 25px;
    }

    /* Teaser */
    &__teaser {
        box-sizing: content-box;
        text-align: center;

        @media all and (min-width: 25.3125em) {
            width: 165px;
        }
    }
    &__teaser-content {
        padding: 1rem 0;
    }
    &__name {
        font-size: 0.75rem;
        font-weight: 400;
        margin: 0;
        text-transform: uppercase;
    }
    &__data-amount {
        display: block;
        font-family: 'pebble';
        font-size: 4rem;
        line-height: 4rem;
        margin-top: 1rem;

        @media all and (min-width: 25.3125em) {
            font-size: 5rem;
            line-height: 5rem;
        }
    }
    &__data-unit {
        display: block;
        font-family: 'pebble';
        font-size: 2rem;
    }
    &__price {
        display: block;
        font-family: 'pebble';
        font-size: 2rem;
    }
    &__price-info {
        display: block;
        font-size: 0.75rem;
    }
    &__teaser-links {
        display: none;
    }

    /* Features */
    &__features {
        display: none;

        .special-message, .button {
            display: none;
        }
    }
    &__speech-bubble {
        background-color: var(--white);
        border-radius: 50%;
        font-style: italic;
        height: 125px;
        margin: -2rem auto 2rem;
        padding: 1rem;
        width: 125px;
    }
    &__highlighted-feature {
    }
    &__highlighted-feature-icon {
        height: 32px;
        width: 32px;
    }
    &__highlighted-feature-text {
        display: block;
    }
    &--is-expanded,
    &--is-showing-features {
        display: flex;
        max-width: 366px;
        width: 98%;

        .subscription__teaser {
            width: 165px;
        }
        .subscription__features {
            display: block;
            padding: 1rem;
            text-align: center;
            width: 200px;
        }
    }

    /* Expanded info */
    &__expanded-info {
        display: none;
    }
    &--is-expanded {
        align-items: flex-start;
        cursor: default;
        flex-wrap: wrap;
        padding: 10% 8%;
        max-width: inherit;

        .subscription__close-expanded-info {
            cursor: pointer;
            display: block;
            position: absolute;
            right: 0;
            top: 0;
        }
        .subscription__data-amount {
            font-size: 5rem;
            line-height: 5rem;
        }
        .subscription__features {
            flex-grow: 2;

            .special-message, .button {
                display: inline-block;
            }
        }
        .subscription__speech-bubble {
            margin: 2rem auto 2rem;

            @media all and (min-width: 30.4em) {
                margin: -2rem auto 2rem;
            }
        }
        .subscription__teaser-links {
            background-color: var(--white);
            display: block;
            padding: 0.5rem;
        }
        .subscription__expanded-info {
            display: block;
            padding-top: 2rem;
            text-align: left;
            width: 1000px;
        }
    }
}