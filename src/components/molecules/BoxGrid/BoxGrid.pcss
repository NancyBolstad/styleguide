.box-grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;

    @media all and (min-width: 26.875em) {
        flex-wrap: wrap;
    }

    .box {
        display: flex;

        @media all and (min-width: 26.875em) {
            flex-basis: auto;
        }

        &--is-expanded {
            align-items: flex-start;
            flex-wrap: wrap;
        }
    }
}