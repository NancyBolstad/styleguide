.full-width-image {
    margin-bottom: var(--margin-bottom);
    position: relative;
    z-index: -1;

    &__image {
        display: block;
        width: 100%;
    }
    
    @media all and (min-width: 28.125em) {
        &__mask {
            bottom: -1px;
            display: block;
            left: 0;
            position: absolute;
            width: 100%;
        }

        &--with-content-overlap {
            margin-bottom: -18%;
        }
    }
}
