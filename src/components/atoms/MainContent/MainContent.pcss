.main-content {
    background-color: var(--white);
    margin-bottom: 120px;
    margin: 0 auto;
    max-width: 796px;

    @media all and (min-width: 28.125em) {
        padding-top: 20px;
        width: 80%;
    }

    @media all and (min-width: 50em) {
        padding-top: 3%;
    }

    &--no-padding-top {
        padding-top: 0;
    }
}
