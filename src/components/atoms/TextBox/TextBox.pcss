.textbox {
    &__label {
        display: block;
    }
    &__input {
        border: none;
        border-bottom: 1px solid #ccc;
        display: block;
        font-size: 1rem;
        padding: 0.5rem 0;
        transition: all 0.3s;
        width: 17.5rem;

        &:active,
        &:focus {
            border-bottom: 1px solid var(--core-purple);
            outline: none;
        }
    }
}