.text-area {
    background-color: var(--light-grey);
    border: 1px solid var(--light-grey);
    color: var(--black);
    font: inherit;
    padding: 1rem;
    resize: none;
    width: 100%;

    ::placeholder {
        color: var(--dark-grey);
    }

    &:hover,
    &:focus,
    &:active {
        border: 1px solid var(--core-purple);
        outline: none;
    }

    &--margin-bottom {
        margin-bottom: 1rem;
    }

    &--white {
        background-color: var(--white);
        border: 1px solid var(--dark-grey-2);
    }
}