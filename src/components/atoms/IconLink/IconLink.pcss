.icon-link {
    background-color: transparent;
    background-position: center;
    background-repeat: no-repeat;
    background-size: 25px 25px;
    display: inline-block;
    height: 25px;
    margin-right: 0.5rem;
    padding: 15px;
    width: 25px;

    &:active,
    &:focus {
        background-color: var(--core-purple);

        outline: none;
    }

    &--download {
        background-image: url('/public/icons/ico_download.svg');

        &:hover {
            background-image: url('/public/icons/ico_download_purple.svg');
        }

        &:active,
        &:focus {
            background-image: url('/public/icons/ico_download_white.svg');
        }
    }

    &--linkedIn {
        background-image: url('/public/icons/linkedin_icon.svg');

        &:hover {
            background-image: url('/public/icons/linkedin_icon_purple.svg');
        }

        &:active,
        &:focus {
            background-image: url('/public/icons/linkedin_icon_white.svg');
        }
    }

    &--twitter {
        background-image: url('/public/icons/twitter_icon.svg');

        &:hover {
            background-image: url('/public/icons/twitter_icon_purple.svg');
        }

        &:active,
        &:focus {
            background-image: url('/public/icons/twitter_icon_white.svg');
        }
    }
}